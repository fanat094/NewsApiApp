<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:tools="http://schemas.android.com/tools">
    <style name="Theme.NewsApiApp" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>

        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <item name="android:windowLightStatusBar" tools:targetApi="M">true</item>

        <!-- AppBar -->
        <item name="actionBarStyle">@style/AppBar</item>
        <item name="actionBarTheme">@style/ThemeOverlay.Actionbar</item>
    </style>

    <!-- AppBarTheme -->
    <style name="ThemeOverlay.Actionbar" parent="ThemeOverlay.MaterialComponents.ActionBar.Surface">
        <item name="android:textColorPrimary">@color/black</item>
    </style>

    <!-- AppBarStyle -->
    <style name="AppBar" parent="Widget.MaterialComponents.ActionBar.Primary">
        <item name="background">@color/white</item>
        <item name="elevation">0dp</item>
    </style>

    <!-- ShapeImageViewStyle -->
    <style name="shapeImageView" parent="ShapeAppearance.MaterialComponents.MediumComponent">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">8%</item>
    </style>

    <!-- TitleArticleStyle -->
    <style name="Theme.NewsApiApp.ArticleTitleTextAppearance" parent="@style/TextAppearance.MaterialComponents.Headline6">
        <item name="android:textSize">16sp</item>
    </style>

    <!-- DateArticleStyle -->
    <style name="Theme.NewsApiApp.ArticleDateTextAppearance" parent="@style/TextAppearance.MaterialComponents.Body2" />

    <!-- TitleDetailsArticleStyle -->
    <style name="Theme.NewsApiApp.ArticleTitleDetailsTextAppearance" parent="@style/TextAppearance.MaterialComponents.Headline6" />

    <!-- TitleDetailsDescriptionArticleStyle -->
    <style name="Theme.NewsApiApp.ArticleDescriptionTextAppearance" parent="@style/TextAppearance.MaterialComponents.Body1">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
    </style>

    <!-- TitleDetailsReadMoreArticleStyle -->
    <style name="Theme.NewsApiApp.ArticleReadMoreTextAppearance" parent="@style/TextAppearance.MaterialComponents.Body2">
        <item name="android:textColor">?android:attr/textColorSecondary</item>
        <item name="textAllCaps">false</item>
    </style>

    <!-- TitleHeaderStyle -->
    <style name="Theme.NewsApiApp.TitleHeaderTextAppearance" parent="@style/TextAppearance.MaterialComponents.Body2" />
</resources>